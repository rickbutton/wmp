<% title 'Sign in' %>

<div class="row">
<div class="span6">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
<div class="control-group">
  <%= f.label :username, :class => "control-label" %>
  <div class="controls"><%= f.text_field :username, :size => "" %></div>
</div>
<div class="control-group">
  <%= f.label :password, :class => "control-label" %>
  <div class="controls"><%= f.password_field :password %></div>
</div>
  <% if !devise_mapping.rememberable? -%>
<div class="control-group">
  <div class="controls"><%= f.check_box :remember_me %></div> <%= f.label :remember_me, :class => "checkbox" %>
</div>
  <% end -%>

  <div class="control-group"><div class="controls"><%= f.submit "Sign in", :class => "btn" %></div></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
